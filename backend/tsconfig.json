{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",          // Changed from commonjs to NodeNext
    "moduleResolution": "NodeNext", // Added this line
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "declaration": true,
    "emitDeclarationOnly": true,  // Changed from true to false
    "composite": true,
    "types": ["node", "express", "dotenv"] // Added this line
  },
  "include": ["src/**/*"],        // Simplified include
  "exclude": ["node_modules", "dist"],
  "files":["express.d.ts"]
}